@model IEnumerable<TaskingSystem.Models.StudentsCourses>

@{
    ViewData["Title"] = "Courses Registration";
}

<h1>Courses Registration</h1>

<p>
    @if (User.IsInRole(Roles.Admin) || User.IsInRole(Roles.SuperAdmin))
    {
        <a class=" btn btn-primary mt-4" asp-action="Create">Create New</a>

    }
</p>
@if (User.IsInRole(Roles.Admin) || User.IsInRole(Roles.SuperAdmin))
{
    <form asp-action="SearchByStudent" method="get" class="form-inline mb-3">
        <input type="text" name="searchString" class="form-control mr-2" placeholder="Search by student name" />
        <button type="submit" class="btn btn-primary">Search</button>
        <a href="/CoursesRegistration" class="btn btn-secondary ml-2">Reset</a>
    </form>
}


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Student)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Student.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Course.CourseCode)
                </td>
                <td>

                    @Html.ActionLink("Delete", "Delete", new { CourseCode = item.CourseCode, StudentId = item.StudentId }, new Dictionary<string, object> { { "class", " btn btn-danger " } })
                </td>
            </tr>
        }
    </tbody>
</table>
