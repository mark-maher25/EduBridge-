@model IEnumerable<TaskingSystem.Models.AssignedTask>

@{
    ViewData["Title"] = "Assignment Taskes";
}

<h1>Assignment Taskes</h1>

@if (User.IsInRole(Roles.User))
{
    <p>
        <a class="btn btn-primary mt-4" asp-action="Create">Create New</a>
    </p>
}

@if (User.IsInRole(Roles.Manger))
{
    

<form method="get" asp-action="TasksByCourse">
    <input type="hidden" name="courseId" value="@ViewBag.SelectedCourse" />

    <div class="form-group">
        <label for="assignmentHeadLineId">Filter by Assignment Head Line:</label>
        <select class="form-control" id="assignmentHeadLineId" name="assignmentHeadLineId" onchange="this.form.submit()">
            <option value="">-- All --</option>
            @if (ViewBag.HeadLines != null)
            {
                foreach (var headLine in ViewBag.HeadLines)
                {
                    bool isSelected = (ViewBag.SelectedAssignmentId != null && headLine.Value == ViewBag.SelectedAssignmentId.ToString());

                    if (isSelected)
                    {
                        <option value="@headLine.Value" selected="selected">@headLine.Text</option>
                    }
                    else
                    {
                        <option value="@headLine.Value">@headLine.Text</option>
                    }
                }
            }
        </select>
    </div>
</form>
}







<br />
<table class="table">
    <thead>
        <tr>
            <th>
                Task
            </th>
            <th>
              Assign Date
            </th>
            <th>
                Assignment  Head Line
            </th>
            <th>
                Student
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    <a class="btn btn-link" href="~/AssignmentFiles/@item.TaskURL">
                    @Html.DisplayFor(modelItem => item.TaskURL)
                    </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AssignedTaskDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AssignmentHeadLine.AssignmentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AssignedTaskStudent.UserName)
            </td>
            <td>
                    <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.AssignedTaskId">Edit</a> |
                    <a class="btn btn-dark btn-sm" asp-action="Details" asp-route-id="@item.AssignedTaskId">Details</a> |
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.AssignedTaskId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
