@model TaskingSystem.Models.lecture

@{
    ViewData["Title"] = "Delete Lecture";
}

<h2 class="mb-4">Delete Lecture</h2>

<div class="row">
    <div class="col-md-6">
        <h4>Are you sure you want to delete this lecture?</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">Lecture Name:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.lectureName)</dd>

            <dt class="col-sm-3">Course Code:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.CourseCode)</dd>

            <dt class="col-sm-3">Professor:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Professor.Id)</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="lectureId" />
            <div class="d-flex gap-2">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
