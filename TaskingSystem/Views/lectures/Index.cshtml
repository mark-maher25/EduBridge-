@model IEnumerable<TaskingSystem.Models.lecture>

@{
    ViewData["Title"] = "Lectures";
}

<h2 class="mb-4">Lectures</h2>
@if (User.IsInRole(Roles.Manger) || User.IsInRole(Roles.SuperAdmin))
{

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-primary">Upload New Lecture</a>
    </div>
}
<table class="table table-striped table-bordered">
    <thead class="table-light">
        <tr>
            <th>@Html.DisplayNameFor(model => model.lectureName)</th>
            <th>@Html.DisplayNameFor(model => model.CourseCode)</th>
            <th>Professor</th>
            <th>File</th>
            @if (User.IsInRole(Roles.Manger) || User.IsInRole(Roles.SuperAdmin))
            {

                <th style="width: 180px;">Actions</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.lectureName</td>
                <td>@item.CourseCode</td>
                <td>@(item.Professor?.UserName ?? item.Professor?.UserName ?? "N/A")</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.lectureURL))
                    {
                        <a href="~/lectures/@item.lectureURL" class="btn btn-sm btn-outline-info" target="_blank">Download</a>
                    }
                    else
                    {
                        <span class="text-muted">No file</span>
                    }
                </td>
                @if (User.IsInRole(Roles.Manger) || User.IsInRole(Roles.SuperAdmin))
                {

                    <td>
                        <a asp-action="Delete" asp-route-id="@item.lectureId" class="btn btn-sm btn-danger">Delete</a>
                </td>
                }
            </tr>
        }
    </tbody>
</table>
